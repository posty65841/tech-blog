<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 posts">
  <div class="col-md-5">
    
   
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
